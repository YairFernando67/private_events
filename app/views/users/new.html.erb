<% provide(:button_text, 'Sign up') %>
<%= form_for(@user) do |f| %>
  <%= render 'shared/errors', obj: @user %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>