<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
  <% if @user.events.any? %>
    <h3>Events (<%= @user.events.count %>)</h3>
    
    <table class="table table-striped">
      <tr>
        <th>Date</th>
        <th>Location</th>
        <th>Description</th>
      </tr>
      <%= render @user.events %>
    </table>
  <% end %> 

  </div>
</div>