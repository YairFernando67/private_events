<% @events.each do |e| %>
  <div class="coming_and_passed_events">
    <div class="header">
      <h2>
        <%= e.name %>
      </h2>
    </div>
    <div class="body">
      <p>
        <%= fa_icon "map-marker" %>
        <%= e.location %>
      </p>
      <span class="label label-success"><%= e.creator.name %> is hosting this event!!</span>
      <p class="description"><%= e.description %></p>
    </div>
    <div class="footer">
      <span class="label label-info"><%= e.date.strftime('%Y %B %d %I:%M%p') %></span>
      <span class="label label-primary"><%= link_to 'Details', event_path(e) %></span>
    </div>
  </div>
<% end %>