<div class="form-login-container">
  <%= form_for(:session , url: login_path) do |f| %>
  <h2>Sign In to Private Events</h2>
    
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
  
    <div>
      <%= f.submit "Login" %>
    </div>
  <% end %>
</div>