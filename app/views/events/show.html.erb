<div class="container">
  <div class="show_event">
    <div class="header">
      <h2>
        <%= @event.creator.name %>'s event.
      </h2>
    </div>
    <div class="body">
      <p>
        <%= fa_icon "map-marker" %>
        <%= @event.location %>
      </p>
      <p class="description"><%= @event.description %></small></p>
    </div>
    <div class="footer">
      <span class="label label-success"><%= @event.date.strftime('%Y %B %d %I:%M%p') %></span>
    </div>
  </div>
  <% if logged_in? && current_user.id == @event.creator_id %>
    <div class="dropdown" style="display:inline-block;">
      <button id="country-select-btn" class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Invite A User
      <span class="caret"></span></button>
      <ul class="dropdown-menu">
          <% User.where('id != ?', current_user.id).each do |user| %>
            <%= content_tag(:li, link_to(user.name, invite_event_path(id: @event.id, params: { user_id: user.id }), remote: :true, method: :post)) %>
          <% end %>
      </ul>
    </div>
  <% end %>
  <% if @event.attendees.any? %>
    <h4>Currently attending:</h4>
    <ul>
      <% @event.attendees.each do |attendee| %>
        <li><%= attendee.name %></li>
      <% end %>
    </ul>
  <% end %>
</div>