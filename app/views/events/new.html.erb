<%= provide(:title, "New Event") %>

<h1>Create your new event!!!!</h1>
<%= form_for(@event) do |f| %>

  <div class="form-group" >
    <%= f.label :date %>
    <%= f.datetime_field :date, class: "form-control" %>
  </div>

  <div class="form-group" >
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group" >
    <%= f.submit "Create", class: "btn btn-success" %>
  </div>
<% end %>